{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dotnet: restore solution",
      "type": "process",
      "command": "dotnet",
      "args": [
        "restore",
        "${workspaceFolder}/NortAnimationMvp.sln"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "dotnet: build solution",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/NortAnimationMvp.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile",
      "dependsOn": "dotnet: restore solution"
    },
    {
      "label": "dotnet: run app",
      "type": "process",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/NortAnimationMvp/NortAnimationMvp.csproj"
      ],
      "group": "none",
      "problemMatcher": "$msCompile",
      "dependsOn": "dotnet: build solution"
    },
    {
      "label": "dotnet: test",
      "type": "process",
      "command": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/NortAnimationMvp.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": "$msCompile",
      "dependsOn": "dotnet: build solution"
    }
  ]
}
